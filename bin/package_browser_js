#!/usr/bin/env bash

echo "游대  mkdir -p ./build";
mkdir -p ./build;

echo "游대  node --max_old_space_size=8192 node_modules/.bin/webpack --config webpack.browser.prod.config.js --display-modules ";
node --max_old_space_size=8192 node_modules/.bin/webpack --config webpack.browser.prod.config.js --display-modules;

echo "游대   rm -rf ./build/wazniya_core_js/";
rm -rf ./build/wazniya_core_js/;

echo "游대   mkdir -p ./build/wazniya_core_js/wazn_utils/";
mkdir -p ./build/wazniya_core_js/wazn_utils/;

echo "游대   cp wazn_utils/WazniyaCoreCpp_WASM.wasm ./build/wazniya_core_js/wazn_utils/";
cp wazn_utils/WazniyaCoreCpp_WASM.wasm ./build/wazniya_core_js/wazn_utils/;

echo "游대   cp wazn_utils/WazniyaCoreCpp_ASMJS.asm.js ./build/wazniya_core_js/wazn_utils/";
cp wazn_utils/WazniyaCoreCpp_ASMJS.asm.js ./build/wazniya_core_js/wazn_utils/;
